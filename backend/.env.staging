# Staging Environment Configuration
NODE_ENV=staging
PORT=5000
MONGODB_URL=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/pinquest-staging?retryWrites=true&w=majority
JWT_SECRET=your_strong_staging_jwt_secret_key
JWT_EXPIRE=7d
CLIENT_URL=https://staging.yourdomain.com

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_EMAIL=your_staging_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_FROM_EMAIL=your_staging_email@gmail.com
REQUIRE_EMAIL_VERIFICATION=true

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_staging_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_staging_cloudinary_api_key
CLOUDINARY_API_SECRET=your_staging_cloudinary_api_secret

# Firebase Admin SDK Configuration
FIREBASE_PROJECT_ID=your_staging_firebase_project_id
FIREBASE_CLIENT_EMAIL=your_staging_firebase_client_email
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_staging_firebase_private_key\n-----END PRIVATE KEY-----"

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Logging level
LOG_LEVEL=INFO

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=15 * 60 * 1000
RATE_LIMIT_MAX_REQUESTS=500

# Security
SECURE_COOKIES=true
TRUST_PROXY=true
CSP_REPORT_ONLY=true